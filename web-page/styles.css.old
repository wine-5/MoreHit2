/* ===== ドット絵スタイル ゲーム紹介ページ ===== */
/* ===== Reset & Base Styles ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
}

html {
    scroll-behavior: smooth;
    font-size: 14px;
}

body {
    font-family: 'Courier New', monospace;
    line-height: 1.8;
    color: #e0e0e0;
    background-color: #0d1b2a;
    overflow-x: hidden;
    background-image: 
        repeating-linear-gradient(
            0deg,
            rgba(255, 255, 255, 0.05) 0px,
            rgba(255, 255, 255, 0.05) 1px,
            transparent 1px,
            transparent 2px
        );
}

/* ===== カラーパレット定義 ===== */
:root {
    --pixel-dark: #0d1b2a;
    --pixel-darker: #0a0f1b;
    --pixel-light: #e0e0e0;
    --pixel-accent1: #ff6b6b;      /* 赤（攻撃） */
    --pixel-accent2: #4ecdc4;      /* 青（射撃） */
    --pixel-accent3: #ffd93d;      /* 黄（特殊技） */
    --pixel-accent4: #a8e6cf;      /* 緑（防御） */
    --pixel-border: #4a5a6a;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* ===== Loading Screen ===== */
.loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #0d1b2a;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    opacity: 1;
    transition: opacity 0.5s ease-out;
}

.loading-screen.hidden {
    opacity: 0;
    pointer-events: none;
}

.loading-content {
    text-align: center;
    color: var(--pixel-light);
}

.loading-spinner {
    width: 60px;
    height: 60px;
    border: 3px solid var(--pixel-border);
    border-top: 3px solid var(--pixel-accent1);
    border-right: 3px solid var(--pixel-accent2);
    animation: spin 1s linear infinite;
    margin: 0 auto 20px;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.loading-content h2 {
    font-size: 1.5rem;
    font-weight: bold;
    letter-spacing: 3px;
    animation: blink 1s infinite;
}

@keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0.5; }
}

/* ===== Navigation ===== */
.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: var(--pixel-darker);
    border-bottom: 4px solid var(--pixel-accent1);
    z-index: 1000;
    transition: all 0.3s ease;
}

.navbar.scrolled {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
}

.nav-brand h1 {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--pixel-accent1);
    letter-spacing: 2px;
    text-transform: uppercase;
    text-shadow: 3px 3px 0px rgba(0, 0, 0, 0.5);
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 1.5rem;
}

.nav-link {
    color: var(--pixel-light);
    text-decoration: none;
    font-weight: bold;
    transition: all 0.2s ease;
    position: relative;
    padding: 8px 12px;
    border: 2px solid transparent;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 1px;
}

.nav-link:hover,
.nav-link.active {
    color: var(--pixel-dark);
    background-color: var(--pixel-accent2);
    border: 2px solid var(--pixel-accent2);
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.bar {
    width: 25px;
    height: 3px;
    background-color: var(--pixel-light);
    margin: 5px 0;
    transition: 0.3s;
}

/* ===== Hero Section ===== */
.hero {
    margin-top: 60px;
    padding: 60px 0;
    background: linear-gradient(180deg, var(--pixel-dark) 0%, var(--pixel-darker) 100%);
    border-bottom: 4px solid var(--pixel-accent3);
    position: relative;
    overflow: hidden;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
}

.hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
        linear-gradient(0deg, transparent 24%, rgba(255, 0, 0, 0.05) 25%, rgba(255, 0, 0, 0.05) 26%, transparent 27%, transparent 74%, rgba(255, 0, 0, 0.05) 75%, rgba(255, 0, 0, 0.05) 76%, transparent 77%, transparent),
        linear-gradient(90deg, transparent 24%, rgba(255, 0, 0, 0.05) 25%, rgba(255, 0, 0, 0.05) 26%, transparent 27%, transparent 74%, rgba(255, 0, 0, 0.05) 75%, rgba(255, 0, 0, 0.05) 76%, transparent 77%, transparent);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: 0;
}

.hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
}

.hero-text {
    flex: 1;
}

.hero-title {
    font-size: 3rem;
    font-weight: 900;
    color: var(--pixel-light);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-shadow: 4px 4px 0px rgba(0, 0, 0, 0.8);
    line-height: 1.2;
}

.title-main {
    display: block;
    color: var(--pixel-accent1);
}

.title-sub {
    display: block;
    color: var(--pixel-accent2);
    font-size: 1.5rem;
    margin-top: 10px;
}

.hero-description {
    font-size: 1.1rem;
    color: var(--pixel-light);
    margin-bottom: 30px;
    line-height: 1.8;
    border-left: 4px solid var(--pixel-accent3);
    padding-left: 15px;
}

.hero-buttons {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    font-size: 1rem;
    font-weight: bold;
    text-decoration: none;
    border: 3px solid;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);
}

.btn:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.3);
}

.btn:active {
    transform: translate(4px, 4px);
    box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.3);
}

.btn-primary {
    background-color: var(--pixel-accent1);
    border-color: var(--pixel-accent1);
    color: var(--pixel-dark);
}

.btn-secondary {
    background-color: var(--pixel-accent2);
    border-color: var(--pixel-accent2);
    color: var(--pixel-dark);
}

.btn-large {
    padding: 16px 32px;
    font-size: 1.2rem;
}

.hero-game-preview {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.game-preview-container {
    width: 100%;
    max-width: 400px;
}

.game-frame {
    aspect-ratio: 1;
    border: 8px solid var(--pixel-accent3);
    background: var(--pixel-darker);
    box-shadow: 0 0 20px rgba(255, 215, 61, 0.3), 12px 12px 0px rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
}

.game-placeholder {
    text-align: center;
    color: var(--pixel-light);
}

.game-placeholder i {
    font-size: 3rem;
    margin-bottom: 15px;
    color: var(--pixel-accent3);
}

.game-placeholder p {
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
}

/* ===== Section Header ===== */
.section-header {
    text-align: center;
    margin-bottom: 50px;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--pixel-light);
    text-transform: uppercase;
    letter-spacing: 3px;
    text-shadow: 3px 3px 0px rgba(0, 0, 0, 0.5);
    margin-bottom: 15px;
}

.section-subtitle {
    font-size: 1.1rem;
    color: var(--pixel-accent2);
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
}

/* ===== About Section ===== */
.about {
    padding: 80px 0;
    background: var(--pixel-dark);
    border-bottom: 4px solid var(--pixel-accent4);
}

.about-content {
    display: flex;
    gap: 40px;
    align-items: center;
}

.about-text {
    flex: 1;
}

.about-text h3 {
    font-size: 1.8rem;
    color: var(--pixel-accent4);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.about-text p {
    font-size: 1rem;
    color: var(--pixel-light);
    margin-bottom: 20px;
    line-height: 1.8;
    border-left: 4px solid var(--pixel-accent4);
    padding-left: 15px;
}

.game-stats {
    display: flex;
    gap: 30px;
    margin-top: 30px;
}

.stat {
    flex: 1;
    background: var(--pixel-darker);
    padding: 20px;
    border: 2px solid var(--pixel-accent4);
    text-align: center;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--pixel-accent4);
    margin-bottom: 10px;
}

.stat-label {
    font-size: 0.9rem;
    color: var(--pixel-light);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.about-image {
    flex: 1;
}

.image-placeholder {
    aspect-ratio: 1;
    background: var(--pixel-darker);
    border: 6px solid var(--pixel-accent4);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--pixel-light);
    box-shadow: 12px 12px 0px rgba(0, 0, 0, 0.4);
}

.image-placeholder i {
    font-size: 3rem;
    color: var(--pixel-accent4);
    margin-bottom: 15px;
}

.image-placeholder p {
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
}

/* ===== Features Section ===== */
.features {
    padding: 80px 0;
    background: var(--pixel-darker);
    border-bottom: 4px solid var(--pixel-accent1);
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
}

.feature-card {
    background: var(--pixel-dark);
    padding: 30px;
    border: 3px solid var(--pixel-border);
    transition: all 0.2s ease;
    text-align: center;
}

.feature-card:hover {
    border-color: var(--pixel-accent1);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    transform: translate(0, -4px);
}

.feature-icon {
    font-size: 2.5rem;
    color: var(--pixel-accent1);
    margin-bottom: 20px;
}

.feature-card h3 {
    font-size: 1.4rem;
    color: var(--pixel-light);
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.feature-card p {
    font-size: 0.95rem;
    color: var(--pixel-light);
    line-height: 1.8;
}

/* ===== Screenshots Section ===== */
.screenshots {
    padding: 80px 0;
    background: var(--pixel-dark);
    border-bottom: 4px solid var(--pixel-accent2);
}

.screenshot-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
}

.screenshot-item {
    aspect-ratio: 4/3;
}

.screenshot-placeholder {
    width: 100%;
    height: 100%;
    background: var(--pixel-darker);
    border: 4px solid var(--pixel-accent2);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--pixel-light);
    transition: all 0.2s ease;
    box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.3);
}

.screenshot-placeholder:hover {
    transform: translate(-4px, -4px);
    box-shadow: 12px 12px 0px rgba(0, 0, 0, 0.3);
}

.screenshot-placeholder i {
    font-size: 2.5rem;
    color: var(--pixel-accent2);
    margin-bottom: 15px;
}

.screenshot-placeholder p {
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
}

/* ===== Download Section ===== */
.download {
    padding: 80px 0;
    background: linear-gradient(180deg, var(--pixel-darker) 0%, var(--pixel-dark) 100%);
    border-bottom: 4px solid var(--pixel-accent3);
}

.download-content {
    display: flex;
    gap: 40px;
    align-items: center;
}

.download-text {
    flex: 1;
}

.download-text h2 {
    font-size: 2.2rem;
    color: var(--pixel-accent3);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.download-text p {
    font-size: 1rem;
    color: var(--pixel-light);
    margin-bottom: 30px;
    line-height: 1.8;
    border-left: 4px solid var(--pixel-accent3);
    padding-left: 15px;
}

.download-buttons {
    margin-bottom: 30px;
}

.system-requirements {
    background: var(--pixel-darker);
    padding: 20px;
    border: 2px solid var(--pixel-accent3);
    margin-top: 20px;
}

.system-requirements h4 {
    color: var(--pixel-accent3);
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.system-requirements ul {
    list-style: none;
    color: var(--pixel-light);
}

.system-requirements li {
    padding: 8px 0;
    border-bottom: 1px solid var(--pixel-border);
}

.system-requirements li:last-child {
    border-bottom: none;
}

.download-image {
    flex: 1;
}

.download-preview {
    aspect-ratio: 1;
}

.preview-placeholder {
    width: 100%;
    height: 100%;
    background: var(--pixel-darker);
    border: 8px solid var(--pixel-accent3);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--pixel-light);
    box-shadow: 0 0 20px rgba(255, 215, 61, 0.3), 12px 12px 0px rgba(0, 0, 0, 0.4);
}

.preview-placeholder i {
    font-size: 3rem;
    color: var(--pixel-accent3);
    margin-bottom: 15px;
}

.preview-placeholder p {
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
}

/* ===== Footer ===== */
.footer {
    background: var(--pixel-darker);
    color: var(--pixel-light);
    padding: 60px 0 20px;
    border-top: 4px solid var(--pixel-accent1);
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
    border-bottom: 2px solid var(--pixel-border);
    padding-bottom: 40px;
}

.footer-section h3,
.footer-section h4 {
    color: var(--pixel-accent1);
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.footer-section p {
    font-size: 0.95rem;
    line-height: 1.8;
    margin-bottom: 20px;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 10px;
}

.footer-section ul li a {
    color: var(--pixel-light);
    text-decoration: none;
    transition: all 0.2s ease;
}

.footer-section ul li a:hover {
    color: var(--pixel-accent2);
    text-decoration: underline;
}

.social-links {
    display: flex;
    gap: 15px;
}

.social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--pixel-dark);
    border: 2px solid var(--pixel-accent1);
    color: var(--pixel-accent1);
    text-decoration: none;
    transition: all 0.2s ease;
}

.social-link:hover {
    background: var(--pixel-accent1);
    color: var(--pixel-dark);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);
}

.footer-bottom {
    text-align: center;
    padding-top: 20px;
    border-top: 2px solid var(--pixel-border);
}

.footer-bottom p {
    font-size: 0.9rem;
    margin-bottom: 8px;
    color: var(--pixel-light);
}

.footer-bottom i {
    color: var(--pixel-accent1);
}

/* ===== Back to Top Button ===== */
.back-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    background: var(--pixel-accent1);
    color: var(--pixel-dark);
    border: 3px solid var(--pixel-accent1);
    border-radius: 0;
    cursor: pointer;
    font-size: 1.5rem;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 999;
    transition: all 0.2s ease;
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.4);
}

.back-to-top:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.4);
}

.back-to-top:active {
    transform: translate(4px, 4px);
    box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.4);
}

.back-to-top.show {
    display: flex;
}

/* ===== Responsive Design ===== */
@media (max-width: 768px) {
    .nav-menu {
        gap: 1rem;
    }

    .nav-link {
        font-size: 0.8rem;
        padding: 6px 10px;
    }

    .hero-content {
        flex-direction: column;
    }

    .hero-title {
        font-size: 2rem;
    }

    .title-sub {
        font-size: 1.2rem;
    }

    .features-grid,
    .screenshot-gallery {
        grid-template-columns: 1fr;
    }

    .download-content {
        flex-direction: column;
    }

    .hero-buttons {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .game-stats {
        flex-direction: column;
    }

    .hamburger {
        display: flex;
    }

    .nav-menu {
        position: absolute;
        left: -100%;
        top: 70px;
        flex-direction: column;
        background-color: var(--pixel-darker);
        width: 100%;
        text-align: center;
        transition: 0.3s;
        gap: 0;
        border-bottom: 4px solid var(--pixel-accent1);
    }

    .nav-menu.active {
        left: 0;
    }

    .nav-link {
        padding: 15px;
        border-bottom: 2px solid var(--pixel-border);
    }
}

@media (max-width: 480px) {
    html {
        font-size: 12px;
    }

    .section-title {
        font-size: 1.8rem;
    }

    .hero-title {
        font-size: 1.5rem;
    }

    .game-preview-container,
    .image-placeholder {
        max-width: 100%;
    }

    .back-to-top {
        width: 40px;
        height: 40px;
        font-size: 1.2rem;
        bottom: 20px;
        right: 20px;
    }

    .container {
        padding: 0 15px;
    }
}
